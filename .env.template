# Flow Starter - Template Environment Variables
# Copia questo file in .env e compila i valori necessari

# Porta del server
CORE_PORT=5050

# Origine CORS principale (frontend URL)
CORE_CORS_ORIGIN=http://127.0.0.1:5173

# Supabase Configuration (OBBLIGATORIO)
SUPABASE_URL=""
SUPABASE_SERVICE_KEY=""
SUPABASE_ANON_KEY=""
SUPABASE_JWKS_URL=""

# Setta a 1 per disabilitare la verifica JWKS (solo sviluppo)
SUPABASE_VERIFY_DISABLED=1

# OpenRouter (per proxy AI)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_PROVISIONING_KEY=""

# Flowise (se usato)
FLOWISE_BASE_URL=""
FLOWISE_API_KEY=""

# Admin key per UI Admin (genera tramite Setup Wizard)
CORE_ADMIN_KEY=""

# Encryption key per credentials (genera automaticamente)
CORE_ENCRYPTION_KEY=""

# Billing Provider (configurato via Setup Wizard)
BILLING_PROVIDER=lemonsqueezy

# LemonSqueezy (OPZIONALE - configurato via Setup Wizard criptato)
LEMONSQUEEZY_BASE_URL="https://api.lemonsqueezy.com/v1"
LEMONSQUEEZY_BYPASS_SIGNATURE=true

# =====================================
# PRIMO AVVIO: usa Setup Wizard
# =====================================
# 1. Avvia: python -m uvicorn app.main:app --reload --host 127.0.0.1 --port 5050
# 2. Vai su: http://127.0.0.1:5050/core/v1/setup/wizard
# 3. Compila il form e segui le istruzioni
# 4. Aggiorna questo .env con i valori generati
# 5. Riavvia il server
